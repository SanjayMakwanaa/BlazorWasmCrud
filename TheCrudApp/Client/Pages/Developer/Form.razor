<EditForm Model="@dev" OnValidSubmit="@OnValidSubmit" Title="@(_isCreating ? "Create Developer" : "Edit Developer")">
    <DataAnnotationsValidator />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">@(_isCreating ? "Create Developer" : "Edit Developer")</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label>First Name:</label>
                                <input class="form-control" type="text" @bind-value="@dev.FirstName" />
                                <ValidationMessage For="@(() => dev.FirstName)" />
                            </div>
                            <div class="form-group">
                                <label>Last Name:</label>
                                <input class="form-control" type="text" @bind-value="@dev.LastName" />
                                <ValidationMessage For="@(() => dev.LastName)" />
                            </div>
                            <div class="form-group">
                                <label>Email:</label>
                                <input class="form-control" type="email" @bind-value="@dev.Email" />
                                <ValidationMessage For="@(() => dev.Email)" />
                            </div>
                            <div class="form-group">
                                <label>Experience:</label>
                                <input class="form-control" type="number" @bind-value="@dev.Experience" />
                                <ValidationMessage For="@(() => dev.Experience)" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-outline-primary mt-4">
            @ButtonText
        </button>
    </div>

</EditForm>

@code {
    [Parameter] public Developer dev { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    private bool _isCreating => dev == null || dev.Id == default;
}
